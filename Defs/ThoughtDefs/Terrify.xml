<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Terrified Thoughts -->

	<ThoughtDef>
		<defName>Terrified_Thought_Small</defName>
		<durationDays>1</durationDays>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>shaken up</label>
				<description>I can't stop thinking about a vision that haunted me recently...I can't stop thinking about it.</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>Terrified_Thought_Med</defName>
		<durationDays>1.5</durationDays>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>anxious</label>
				<description>I can't stop thinking about a vision that haunted me recently...it's making me feel anxious.</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>Terrified_Thought_Large</defName>
		<durationDays>3</durationDays>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>traumatised</label>
				<description>My mind is filled with twisted thoughts and visions...visions of loved ones, visions of my future, visions of pain.</description>
				<baseMoodEffect>-10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- Terrified Combat Log Rule -->

	<!-- TODO: Does this work? -->

	<RulePackDef>
		<defName>Damage_Terrify</defName>
		<rulePack>
			<rulesStrings>
				<li>damaged_past->terrified</li>
				<li>damaged_past->petrified</li>
				<li>damaged_past->horrified</li>
				<li>damaged_past->intimidated</li>
				<li>damaged_past->mentally-scarred</li>
				<li>damaged_past->traumatised</li>

				<li>destroyed_past->damaged_past</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>


</Defs>