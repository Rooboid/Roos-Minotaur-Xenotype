<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<!--   	Petrification Damage -->

	<DamageDef ParentName="Flame">
		<defName>Terrified</defName>
		<label>terrified</label>
		<workerClass>DamageWorker_AddInjury</workerClass>
		<hediff>Terrified</hediff>
		<externalViolence>true</externalViolence>
		<defaultDamage>20</defaultDamage>
		<canInterruptJobs>true</canInterruptJobs>
		<combatLogRules>Damage_Terrify</combatLogRules>
		<makesAnimalsFlee>true</makesAnimalsFlee>
		<!-- Effects -->
		<explosionCellFleck>TerrorFleck</explosionCellFleck>
		<explosionColorEdge>(0.3, 0.70, 0.88, 0.05)</explosionColorEdge>
		<soundExplosion>Explosion_Terrify</soundExplosion>

	</DamageDef>


	<HediffDef ParentName="DiseaseBase">
    <defName>Terrified</defName>
    <label>terrified</label>
    <labelNoun>terror</labelNoun>
    <description>Abhorrent visions haunt the mind.</description>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>100</disappearsAfterTicks>
        <showRemainingTime>false</showRemainingTime>
      </li>
      <li Class="HediffCompProperties_RemoveIfOtherHediff">
        <otherHediff>HeDiffSeeRed</otherHediff>
        <stages>2~</stages>
        <mtbHours>0</mtbHours>
      </li>
    </comps>
    <injuryProps>
      <destroyedLabel>Terrified</destroyedLabel>
      <destroyedOutLabel>Terrified</destroyedOutLabel>
    </injuryProps>
	<stages>
			<li>
				<minSeverity>0</minSeverity>
				<label>terrified</label>
				<mentalStateGivers>
					<li>
						<mentalState>RBM_TerrifiedFlee</mentalState>
						<mtbDays>0</mtbDays>
					</li>
				</mentalStateGivers>
			</li>
		</stages>
  </HediffDef>
	
  
	<!-- Terrified Thoughts -->
  
	<ThoughtDef>
		<defName>Terrified_Thought</defName>
		<durationDays>1.3</durationDays>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>shaken up</label>
				<description>I can't stop thinking about a vision that haunted me recently...I can't stop thinking about it.</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
					<li>
				<label>anxious</label>
				<description>I can't stop thinking about a vision that haunted me recently...it's making me feel anxious.</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
						<li>
				<label>traumatised</label>
				<description>My mind is filled with twisted thoughts and visions...visions of loved ones, visions of my future, visions of pain.</description>
				<baseMoodEffect>-10</baseMoodEffect>
			</li>
					</stages>
	</ThoughtDef>

	<!-- Terrified Combat Log Rule -->
  
	<RulePackDef>
		<defName>Damage_Terrify</defName>
		<rulePack>
			<rulesStrings>
				<li>damaged_past->terrified</li>
				<li>damaged_past->petrified</li>
				<li>damaged_past->horrified</li>
				<li>damaged_past->intimidated</li>
				<li>damaged_past->mentally-scarred</li>
				<li>damaged_past->traumatised</li>

				<li>destroyed_past->damaged_past</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>
	
	<!-- Terrified Break -->
	<MentalStateDef ParentName="BaseMentalState">
		<defName>RBM_TerrifiedFlee</defName>
		<label>terrified</label>
		<stateClass>MentalState_PanicFlee</stateClass>
		<minTicksBeforeRecovery>100</minTicksBeforeRecovery>
		<maxTicksBeforeRecovery>6000</maxTicksBeforeRecovery>
		<category>Misc</category>
		<nameColor>(0.65, 0.9, 0.93)</nameColor>
		<beginLetterLabel IsNull="True"/>
		<beginLetter IsNull="True"/>
		<recoveryMessage IsNull="True"/>
		<baseInspectLine>Terrified.</baseInspectLine>
		<blockNormalThoughts>true</blockNormalThoughts>
		<moodRecoveryThought>Terrified_Thought</moodRecoveryThought>
		<stateEffecter>RBM_TerrifiedEffect</stateEffecter>
		<inCaravanCanDo>false</inCaravanCanDo>
	</MentalStateDef>
		
</Defs>