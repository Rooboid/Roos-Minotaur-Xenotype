						<li><symbol>lean</symbol></li>
						<li><symbol>bulk</symbol></li>
						<li><symbol>rile</symbol></li>
					</suffixSymbols>
				</symbolPack>
				<modExtensions>
					<li MayRequire="OskarPotocki.VanillaFactionsExpanded.Core" Class="VanillaGenesExpanded.GeneExtension">
						<caravanCarryingFactor>1.3</caravanCarryingFactor>
						<bodyScaleFactor>1.35,1.35</bodyScaleFactor>
						<headScaleFactor>1.1,1.1</headScaleFactor>
					</li>
				</modExtensions>
			</GeneDef>
	
