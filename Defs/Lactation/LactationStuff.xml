<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef>
	<defName>RBM_Aching</defName>
	<label>aching</label>
	<labelNoun>aching</labelNoun>
	<tendable>false</tendable>
	<initialSeverity>0.001</initialSeverity>
	<defaultLabelColor>(0.4, 0.4, 0.9)</defaultLabelColor>
	<description>This pawn is experiencing inflammation due to needing to be milked.</description>
	<hediffClass>HediffWithComps</hediffClass>
	<comps>
		<li Class="HediffCompProperties_GiveRandomSituationalThought">
			<thoughtDefs>
				<li>RBM_AchingThought</li>
			</thoughtDefs>
		</li>
		      <li Class="HediffCompProperties_RecoveryThought">
        <thought>RBM_MilkedThought</thought>
      </li>
	</comps>
	<stages>
		<li>
			<minSeverity>0</minSeverity>
			<label>minor</label>
			<painOffset>0.05</painOffset>
		</li>
		<li>
			<minSeverity>50</minSeverity>
			<label>major</label>
			<painOffset>0.3</painOffset>
		</li>
		<li>
			<minSeverity>90</minSeverity>
			<label>excruciating</label>
			<painOffset>0.5</painOffset>
			        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
		</li>
	</stages>
	</HediffDef>
	
	  <HediffDef>
    <defName>RBM_PermanentLactation</defName>
    <label>permanent lactation</label>
    <description>Pawns with the 'lactation' gene will always be able to breastfeed.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <initialSeverity>1</initialSeverity>
    <everCurableByItem>false</everCurableByItem>
    <comps>
      <li Class="HediffCompProperties_Lactating">
        <ticksToFullCharge>10000</ticksToFullCharge> <!-- 6 hrs: 2 to feed a baby and 4 to recover. -->
        <initialCharge>0.125</initialCharge>
        <fullChargeAmount>0.125</fullChargeAmount>
        <labelInBrackets>milk fullness {CHARGEFACTOR_percentage}</labelInBrackets>
        <minChargeToActivate>0.031</minChargeToActivate> <!-- some hysteresis so when breastfeeding starts we're sure it can continue for a while. -->
      </li>
    </comps>
    <stages>
      <li>
	  <becomeVisible>false</becomeVisible>
       <minSeverity>0</minSeverity>
      </li>
    </stages>
  </HediffDef>
	
	  <ThoughtDef>
    <defName>RBM_MilkedThought</defName>
    <stackLimit>1</stackLimit>
	<durationDays>0.5</durationDays>
    <stages>
      <li>
        <label>freshly milked</label>
        <description>Ah, I feel much lighter now that I've gotten that out of my system.</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  	  <ThoughtDef>
    <defName>RBM_AchingThought</defName>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>need to be milked</label>
        <description>My body is aching. I haven't been milked in a while.</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
    	  <ThoughtDef>
    <defName>RBM_Crushed</defName>
	<icon>Things/Mote/RBM_Crushed/RBM_Crushed</icon>
    <showBubble>true</showBubble>
    <stackLimit>3</stackLimit>
	<durationDays>1.3</durationDays>
	 <nullifyingTraits>
      <li>Masochist</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>crushed during lovin'</label>
        <description>Well. I suppose this is what I get having a tumble with someone twice my size...</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
      	  <ThoughtDef>
    <defName>RBM_AteBeef</defName>
	<icon>Things/Mote/RBM_AteBeef/RBM_AteBeef</icon>
    <showBubble>true</showBubble>
    <stackLimit>3</stackLimit>
	<durationDays>1</durationDays>
	    <requiredGenes>
      <li>RBM_BovineHead</li>
    </requiredGenes>
    <nullifyingTraits>
      <li>Cannibal</li>
    </nullifyingTraits>
    <nullifyingPrecepts>
      <li MayRequire="Ludeon.RimWorld.Ideology">Cannibalism_Acceptable</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Cannibalism_Preferred</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Cannibalism_RequiredStrong</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Cannibalism_RequiredRavenous</li>
    </nullifyingPrecepts>
    <stages>
      <li>
        <label>ate beef</label>
        <description>I ate the meat of another bovine...This is awful.</description>
        <baseMoodEffect>-20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
	
	
</Defs>